{
  "info": {
    "name": "ERP SENA - CRUD Pedidos (admin, supervisor, user)",
    "_postman_id": "erp-sena-crud-pedidos-001",
    "description": "Colección CRUD de pedidos para los usuarios admin, supervisor y user.",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "base_url", "value": "http://localhost:8081/api" }
  ],
  "item": [
    {
      "name": "Login ADMIN",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"correo\": \"admin@erp.com\",\n  \"password\": \"admin123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": ["{{base_url}}"],
          "path": ["auth", "login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "pm.environment.set(\"token_admin\", json.token);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Login SUPERVISOR",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"correo\": \"supervisor@erp.com\",\n  \"password\": \"supervisor123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": ["{{base_url}}"],
          "path": ["auth", "login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "pm.environment.set(\"token_supervisor\", json.token);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "Login USER",
      "request": {
        "method": "POST",
        "header": [],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"correo\": \"user@erp.com\",\n  \"password\": \"user123\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": ["{{base_url}}"],
          "path": ["auth", "login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "var json = pm.response.json();",
              "pm.environment.set(\"token_user\", json.token);"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    
    {
      "name": "ADMIN - Crear Pedido",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token_admin}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "url": { "raw": "{{base_url}}/pedidos", "host": ["{{base_url}}"], "path": ["pedidos"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"clienteId\": 1,\n  \"fecha\": \"2024-08-01\",\n  \"estado\": \"pendiente\",\n  \"motivoEstado\": \"Pendiente por pago\",\n  \"detalles\": [\n    { \"productoId\": 1, \"cantidad\": 2, \"precioUnitario\": 10000 },\n    { \"productoId\": 2, \"cantidad\": 1, \"precioUnitario\": 5000 }\n  ]\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status 200 o 201\", function () {",
              "    pm.expect(pm.response.code).to.be.oneOf([200,201]);",
              "});",
              "pm.test(\"El pedido tiene ID\", function () {",
              "    var json = pm.response.json();",
              "    pm.expect(json.id).to.exist;",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "ADMIN - Consultar todos los pedidos",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token_admin}}", "type": "text" }
        ],
        "url": { "raw": "{{base_url}}/pedidos", "host": ["{{base_url}}"], "path": ["pedidos"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"La respuesta contiene pedidos\", function () {",
              "    var json = pm.response.json();",
              "    pm.expect(json.content).to.be.an('array');",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "ADMIN - Consultar pedido por ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token_admin}}", "type": "text" }
        ],
        "url": { "raw": "{{base_url}}/pedidos/1", "host": ["{{base_url}}"], "path": ["pedidos", "1"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"El pedido tiene ID\", function () {",
              "    var json = pm.response.json();",
              "    pm.expect(json.id).to.exist;",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "ADMIN - Actualizar pedido",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token_admin}}", "type": "text" },
          { "key": "Content-Type", "value": "application/json", "type": "text" }
        ],
        "url": { "raw": "{{base_url}}/pedidos/1", "host": ["{{base_url}}"], "path": ["pedidos", "1"] },
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id\": 1,\n  \"cliente\": { \"id\": 1 },\n  \"fecha\": \"2024-08-01\",\n  \"estado\": \"enviado\",\n  \"motivoEstado\": \"Pedido listo para envío\",\n  \"detalles\": [\n    { \"producto\": { \"id\": 1 }, \"cantidad\": 2, \"precioUnitario\": 10000 },\n    { \"producto\": { \"id\": 2 }, \"cantidad\": 1, \"precioUnitario\": 5000 }\n  ],\n  \"total\": 25000\n}"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "pm.test(\"El pedido tiene ID\", function () {",
              "    var json = pm.response.json();",
              "    pm.expect(json.id).to.exist;",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    },
    {
      "name": "ADMIN - Eliminar pedido",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token_admin}}", "type": "text" }
        ],
        "url": { "raw": "{{base_url}}/pedidos/1", "host": ["{{base_url}}"], "path": ["pedidos", "1"] }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status 200 o 204\", function () {",
              "    pm.expect([200,204]).to.include(pm.response.code);",
              "});"
            ],
            "type": "text/javascript"
          }
        }
      ]
    }
    
  ]
} 